<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.mpasswordkeeper">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name=".PasswordKeeper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.FingerPrintActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LandingActivity" />
        <activity android:name=".activity.BankListActivity" />
        <activity
            android:name=".activity.AddEditBankActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.EmailListActivity" />
        <activity android:name=".activity.AddEditEmailActivity" />
        <activity android:name=".activity.OtherListActivity" />
        <activity android:name=".activity.AddEditOtherActivity"></activity>
    </application>

</manifest>