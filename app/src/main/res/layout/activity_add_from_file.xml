<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobile.mpasswordkeeper.activity.AddFromFileActivity">

    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_marginTop="@dimen/marginExtraLargeLeftAndRight"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spinner_title"
        style="@style/TextMain"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/file_type"
        android:layout_gravity="center"
        android:id="@+id/file_spinner"
        style="@android:style/Widget.Material.Spinner.Underlined"
        android:spinnerMode="dropdown"

        />


</LinearLayout>
